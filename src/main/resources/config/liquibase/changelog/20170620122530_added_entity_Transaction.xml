<?xml version="1.0" encoding="utf-8"?>
<databaseChangeLog
    xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
    xmlns:ext="http://www.liquibase.org/xml/ns/dbchangelog-ext"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.4.xsd
                        http://www.liquibase.org/xml/ns/dbchangelog-ext http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-ext.xsd">

    <property name="now" value="now()" dbms="h2"/>

    <property name="now" value="now()" dbms="mysql"/>
    <property name="autoIncrement" value="true"/>

    <property name="floatType" value="float4" dbms="postgresql, h2"/>
    <property name="floatType" value="float" dbms="mysql, oracle, mssql"/>

    <!--
        Added the entity Transaction.
    -->
    <changeSet id="20170620122530-1" author="jhipster">
        <createTable tableName="transaction">
            <column name="id" type="bigint" autoIncrement="${autoIncrement}">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="id_position" type="integer">
                <constraints nullable="true" />
            </column>

            <column name="price" type="double">
                <constraints nullable="true" />
            </column>

            <column name="quantity" type="double">
                <constraints nullable="true" />
            </column>

            <column name="jhi_type" type="integer">
                <constraints nullable="false" />
            </column>

            <column name="status" type="integer">
                <constraints nullable="false" />
            </column>

            <column name="trade_date" type="date">
                <constraints nullable="false" />
            </column>

            <column name="settlement_date" type="date">
                <constraints nullable="false" />
            </column>

            <column name="amount" type="double">
                <constraints nullable="true" />
            </column>

            <column name="market_fees" type="double">
                <constraints nullable="true" />
            </column>

            <column name="broker_fees" type="double">
                <constraints nullable="true" />
            </column>

            <column name="client_fees" type="${floatType}">
                <constraints nullable="true" />
            </column>

            <column name="forex_spot" type="double">
                <constraints nullable="true" />
            </column>

            <column name="comments" type="varchar(255)">
                <constraints nullable="true" />
            </column>

            <column name="bo_comment" type="varchar(255)">
                <constraints nullable="true" />
            </column>

            <column name="cfd" type="bit">
                <constraints nullable="true" />
            </column>

            <column name="book_id" type="bigint">
                <constraints nullable="false" />
            </column>

            <column name="asset_id" type="bigint">
                <constraints nullable="false" />
            </column>

            <column name="currency_id" type="bigint">
                <constraints nullable="true" />
            </column>

            <column name="broker_id" type="bigint">
                <constraints nullable="true" />
            </column>

            <column name="primebroker_id" type="bigint">
                <constraints nullable="true" />
            </column>

            <!-- jhipster-needle-liquibase-add-column - JHipster will add columns here, do not remove-->
        </createTable>
        
    </changeSet>
</databaseChangeLog>
