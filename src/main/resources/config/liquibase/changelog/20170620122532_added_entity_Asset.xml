<?xml version="1.0" encoding="utf-8"?>
<databaseChangeLog
    xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
    xmlns:ext="http://www.liquibase.org/xml/ns/dbchangelog-ext"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.4.xsd
                        http://www.liquibase.org/xml/ns/dbchangelog-ext http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-ext.xsd">

    <property name="now" value="now()" dbms="h2"/>

    <property name="now" value="now()" dbms="mysql"/>
    <property name="autoIncrement" value="true"/>

    <property name="floatType" value="float4" dbms="postgresql, h2"/>
    <property name="floatType" value="float" dbms="mysql, oracle, mssql"/>

    <!--
        Added the entity Asset.
    -->
    <changeSet id="20170620122532-1" author="jhipster">
        <createTable tableName="asset">
            <column name="id" type="bigint" autoIncrement="${autoIncrement}">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="name" type="varchar(255)">
                <constraints nullable="true" />
            </column>

            <column name="reference" type="varchar(255)">
                <constraints nullable="true" />
            </column>

            <column name="jhi_type" type="integer">
                <constraints nullable="true" />
            </column>

            <column name="quotity" type="double">
                <constraints nullable="true" />
            </column>

            <column name="comments" type="longblob">
                <constraints nullable="true" />
            </column>
            <column name="comments_content_type" type="varchar(255)">
                <constraints nullable="true" />
            </column>

            <column name="gdate" type="date">
                <constraints nullable="true" />
            </column>

            <column name="gnumbera" type="integer">
                <constraints nullable="true" />
            </column>

            <column name="genuma" type="integer">
                <constraints nullable="true" />
            </column>

            <column name="gnumberb" type="integer">
                <constraints nullable="true" />
            </column>

            <column name="gdateb" type="date">
                <constraints nullable="true" />
            </column>

            <column name="genumb" type="integer">
                <constraints nullable="true" />
            </column>

            <column name="genumc" type="integer">
                <constraints nullable="true" />
            </column>

            <column name="genumd" type="integer">
                <constraints nullable="true" />
            </column>

            <column name="gdatec" type="date">
                <constraints nullable="true" />
            </column>

            <column name="market_id" type="bigint">
                <constraints nullable="true" />
            </column>

            <column name="currency_id" type="bigint">
                <constraints nullable="true" />
            </column>

            <column name="country_id" type="bigint">
                <constraints nullable="true" />
            </column>

            <column name="city_id" type="bigint">
                <constraints nullable="true" />
            </column>

            <column name="sector_id" type="bigint">
                <constraints nullable="true" />
            </column>

            <!-- jhipster-needle-liquibase-add-column - JHipster will add columns here, do not remove-->
        </createTable>
        
    </changeSet>
</databaseChangeLog>
